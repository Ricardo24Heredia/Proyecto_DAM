<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#99ccff">

        <TextView
            android:id="@+id/txtNombrePaciente"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="Nombre Completo del paciente"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txtDUIPaciente"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="DUI del paciente"
            android:textSize="17sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/txtTelefonoPaciente"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tel del paciente"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtEdadPaciente"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edad"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtGeneroPaciente"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Genero paciente"
                android:textColor="@color/text_gray"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/txtDireccionPaciente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DirecciÃ³n del paciente"
                android:textColor="@color/text_gray"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>